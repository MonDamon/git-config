#!/bin/bash

me=`basename $0`

usage () {
    # Call as: usage [EXITCODE] [USAGE MESSAGE]
    exit_code=1
    if [[ "$1" == [0-9] ]]; then
        exit_code="$1"
        shift
    fi
    if [ -n "$1" ]; then
        echo "$*" >&2
        echo
    fi

    cat <<EOF >&2
Usage:
  # remove 'Bug 123456 -' prefix from every commit log in range
  $me '1 { s/^Bug 123456 -// }' REVISION-RANGE
EOF
    exit "$exit_code"
}

if [ "$1" == '-h' ] || [ "$1" == '--help' ]; then
    usage 0
fi

[ $# == 2 ] || usage

sed="$1"
revrange="$2"

git filter-branch -f --msg-filter "sed '$sed'" "$revrange"
