#!/bin/sh

if [ -t 0 ]; then
    git filter-branch --env-filter 'git-rewrite-author' "$@"
else
    if [ "$GIT_COMMITTER_NAME" = "Adam Spiers" ]; then
    #export GIT_COMMITTER_NAME="<New Name>"
    #export GIT_AUTHOR_NAME="<New Name>"
        export GIT_COMMITTER_EMAIL="committer@adamspiers.org"
        export GIT_AUTHOR_EMAIL="author@adamspiers.org"
    fi
fi
