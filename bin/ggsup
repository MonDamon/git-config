#!/bin/bash

# Git Set UPstream - set ref of upstream branch for a local branch

me=`basename $0`

usage () {
    # Call as: usage [EXITCODE] [USAGE MESSAGE]
    exit_code=1
    if [[ "$1" == [0-9] ]]; then
        exit_code="$1"
        shift
    fi
    if [ -n "$1" ]; then
        echo "$*" >&2
        echo
    fi

    cat <<EOF >&2
Usage: $me [<local branch>] <upstream remote/branch>
Sets a branch (HEAD by default) to track a remote branch.
EOF
    exit "$exit_code"
}

set_upstream () {
    if [ $# -eq 1 ]; then
        set -- `git head` "$1"
    fi

    git branch --set-upstream "$1" "$2"
}

root="`git root`"
if ! [ -d "$root" ]; then
    exit 1
fi

if [ "$1" == '-h' ] || [ "$1" == '--help' ] || [ $# -eq 0 ] || [ $# -gt 2 ]; then
    usage 0
fi

set_upstream "$@"
