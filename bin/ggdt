#!/bin/sh

if [ "$1" = '-h' ] || [ "$1" = '--help' ]; then
    exec git diff-tree "$@"
fi

[ -t 1 ] && args=--color

if [ -z "$1" ]; then
    upstream="`ggup`" || exit 1  # ggup will display the error
    set -- "$upstream"..HEAD
fi

export GIT_PAGER_MODE=diff
. $ZDOTDIR/.shared_rc.d/git
exec git diff-tree -p $args "$@"
